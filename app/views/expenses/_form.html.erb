<div class="new_expense_form_wrapper">
  <%= form_with(model: expense, url: user_expenses_path) do |form| %>
    <% if expense.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

        <ul>
          <% expense.errors.each do |error| %>
            <li><%= error.full_message.capitalize %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.text_field :name, autofocus: true, placeholder: "Name", class: "table_input" %>
    </div>

    <div>
      <%= form.text_field :amount, placeholder: "Amount", class: "table_input" %>
    </div>

    <div class="select_category_field">
      <%= form.label :group_ids, "Select a Category" %>
      <%= form.select :group_ids, options_from_collection_for_select(@groups, :id, :name), {}, { multiple: true, class: "form-select" } %>
    </div> 

    <div>
      <%= form.submit "Save", class: "form_button" %>
    </div>

    <div>
      <%= link_to "Back to expenses", user_expenses_path(current_user), class: "links" %>
    </div>
  <% end %>
</div>
