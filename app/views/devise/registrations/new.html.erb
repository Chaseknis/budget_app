<div class="sign_up_container">
  <div class="sign_up_form_wrapper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, placeholder: "Username", class:"table_input" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"table_input" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", class:"table_input" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class:"table_input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"form_button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links", class:"links" %>
  </div>
</div>
