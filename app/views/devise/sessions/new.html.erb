<div class="login_container">
  <div class = "direction" > 
    <%= link_to unauthenticated_root_path do %>
      <i class="fa fa-arrow-left"></i>
    <% end %>
  </div>

  <h2>Log in</h2>

  <div class="login_form_wrapper">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"table_input" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"table_input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"check_box_label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"login_button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
